@model Quiz.Entities.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kids Quiz Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-purple-400 via-pink-300 to-blue-400 min-h-screen">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-3xl shadow-2xl p-8 w-full max-w-md transform hover:scale-105 transition-transform duration-300">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-purple-600 mb-2">Welcome Kids! 🌟</h1>
                <p class="text-gray-500">Login to start your fun quiz adventure!</p>
            </div>

            <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-red-600 mb-4 text-sm">
                    @Html.ValidationSummary(false, "", new { @class = "text-red-500" })
                </div>
            }

            <!-- Login Form -->
            <form asp-action="Login" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Email Input -->
                <div>
                    <label for="Email" class="block text-lg font-medium text-gray-700 mb-2">
                        <span class="flex items-center gap-2">
                            ✉️ Your Email
                        </span>
                    </label>
                    <input type="email"
                           id="Email"
                           name="Email"
                           class="w-full px-4 py-3 rounded-xl border-2 border-purple-300 focus:border-purple-500 focus:ring focus:ring-purple-200 transition-all duration-300 outline-none text-gray-600"
                           placeholder="Enter your email" />
                    <span class="text-red-500 text-sm">@Html.ValidationMessageFor(model => model.Email)</span>
                </div>

                <!-- Password Input -->
                <div>
                    <label for="Password" class="block text-lg font-medium text-gray-700 mb-2">
                        <span class="flex items-center gap-2">
                            🔑 Password
                        </span>
                    </label>
                    <input type="password"
                           id="Password"
                           name="Password"
                           class="w-full px-4 py-3 rounded-xl border-2 border-purple-300 focus:border-purple-500 focus:ring focus:ring-purple-200 transition-all duration-300 outline-none text-gray-600"
                           placeholder="Enter your password" />
                    <span class="text-red-500 text-sm">@Html.ValidationMessageFor(model => model.Password)</span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="flex items-center">
                    <input type="checkbox" id="RememberMe" name="RememberMe" class="mr-2" />
                    <label for="RememberMe" class="text-gray-700 font-medium">Remember me</label>
                </div>

                <!-- Submit Button -->
                <button type="submit"
                        class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white font-bold py-3 px-6 rounded-xl hover:from-purple-600 hover:to-pink-600 transform hover:scale-105 transition-all duration-300 shadow-lg">
                    Login 🎮
                </button>
            </form>

            <!-- Footer -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-500">
                    Don't have an account?
                    <a href="@Url.Action("Register", "Account", new { area = "Admin" })" class="text-purple-500 hover:text-purple-700 font-medium">
                        Register
                    </a>
                </p>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute -top-4 -left-4 w-24 h-24 bg-yellow-200 rounded-full opacity-50 blur-xl"></div>
            <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-pink-200 rounded-full opacity-50 blur-xl"></div>
        </div>
    </div>
</body>
</html>
