@model Quiz.Entities.ViewModels.HighestScoreViewModel

@{
    ViewData["Title"] = "Highest Score";

    Layout = "_Dashboard.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>🌟 Space Quiz Champions! 🌟</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-b from-purple-400 via-pink-300 to-blue-300 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 animate-bounce">
                🚀 Space Quiz Champions! 🌎
            </h1>
            <p class="text-xl text-white mb-16">Top Scorer of This Quiz!</p>
        </div>

        <!-- Scores Card -->
        <div class="bg-white rounded-3xl shadow-2xl p-6 md:p-8 max-w-3xl mx-auto transform hover:scale-105 transition-transform duration-300">
            <!-- Trophy Banner -->
            <div class="flex justify-center -mt-16 mb-4">
                <div class="bg-yellow-400 rounded-full p-6 shadow-lg">
                    <span class="text-6xl">🏆</span>
                </div>
            </div>

            <!-- Highest Score -->
            <div class="bg-gradient-to-r from-yellow-200 to-yellow-100 rounded-xl p-4 flex items-center">
                <div class="text-4xl mr-4">🥇</div>
                <div class="flex-grow">
                    <h3 class="text-xl font-bold text-gray-800">
                        User: @Model.Name
                    </h3>
                    <p class="text-gray-600">
                        Score: @Model.Score 
                    </p>
                </div>
                <div class="text-3xl">⭐⭐⭐</div>
            </div>

            <!-- Motivational Message -->
            <div class="mt-8 text-center">
                <p class="text-lg text-purple-600 font-semibold">
                    Keep learning and reaching for the stars! 🌟
                </p>
                <div class="mt-4 text-2xl animate-bounce">
                    👏 🎉 🚀
                </div>
            </div>
        </div>
    </div>
</body>
</html>
