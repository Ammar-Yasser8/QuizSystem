@using Quiz.Entities.Models
@model IEnumerable<quiz>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    @if (Model == null || !Model.Any())

    {
        <div class="col-span-full text-center text-gray-600">
            <p>No quizzes available at the moment. Please check back later.</p>
        </div>
    }

    else
    {

        foreach (var quiz in Model)
        {
            <a href="@Url.Action("Take", "Quiz", new { area = "User", id = quiz.Id })" class="transform hover:scale-105 transition-transform duration-300">
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-4 border-yellow-400">
                    <div class="bg-yellow-400 p-4">
                        <h2 class="text-2xl font-bold text-white text-center">@quiz.Title</h2>
                    </div>
                    <div class="p-6">
                        <div class="text-center mb-4">
                            <span class="text-6xl">🌎</span>
                        </div>
                        <p class="text-gray-600 text-center">@quiz.Description</p>
                    </div>
                </div>
            </a>
        }

    }
</div>
